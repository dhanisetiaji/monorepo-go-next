# =============================================================================
# MONOREPO DEVELOPMENT ENVIRONMENT VARIABLES
# =============================================================================
# This file contains all environment variables for development
# Copy this to .env.local for your local development

# =============================================================================
# BACKEND CONFIGURATION (Go)
# =============================================================================
PORT=8080
GIN_MODE=debug

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=monorepo_user
DB_PASSWORD=monorepo_password
DB_NAME=monorepo_db
DB_SSLMODE=disable

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=development-secret-change-in-production-asdsad342rfds
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# =============================================================================
# FRONTEND CONFIGURATION (Next.js)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8080

